{
    "openapi": "3.0.0",
    "info": {
        "title": "API Proyectos",
        "version": "1.0"
    },
    "servers": [
        {
            "url": "http://localhost:8000/",
            "description": "[@OA\\Info(title=\"API Proyectos\", version=\"1.0\")]"
        },
        {
            "url": "http://localhost:8000/",
